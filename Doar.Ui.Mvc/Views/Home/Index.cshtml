@using Doar.Session
@model IEnumerable<Doar.Entity.Entities.Doacao>
    @{
    ViewBag.Title = "Home";
    }

    <div class="jumbotron">
        <img src="~/logo.png" />
        <p class="lead">Doar.com é um sistema free dedicado à ONG's e outras instituições de caridade</p>
        @if (UsuarioSession.Usuario != null)
        {
        <div class="col-md-4">
            <div class="input-group">
                <input id="Valor" type="text" class="form-control" placeholder="Valor da Doação">
                <span class="input-group-btn">
                    @Ajax.ActionLink("Doar", "Boleto", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "window.open(window.location.origin + '/Home/GerarBoleto/'+data, '_blank');" }, new { @class = "btn btn-primary", id = "btnDoar" })
                </span>
            </div>
        </div>

        }
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Conheça mais</h2>
            <p>
                Doar.com providencia funções básicas para sua ONG's ou instituição de caridade, como por exemplo, gerenciamento de doações por
                cartões de credito e boleto, controle de usuários, envio automático de e-maiils e etc.
            </p>
        </div>
    </div>


    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnDoar").click(function (event) {
                $(this).attr('href', $(this).attr('href').split('?')[0] + "?Valor=" + $('#Valor').val());
            });
        });
    </script>
