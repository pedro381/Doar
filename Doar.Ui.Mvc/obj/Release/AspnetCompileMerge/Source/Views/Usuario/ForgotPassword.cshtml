@model Doar.Entity.Entities.Usuario
@{
    ViewBag.Title = "Lembrar Senha";
}

<h2>@ViewBag.Title</h2>

@using (Ajax.BeginForm("ForgotPassword", "Usuario", new AjaxOptions { HttpMethod = "POST", OnSuccess = "MensagemSucesso();" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="col-md-3 center panel">
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Lembrar" />
        </div>
        @Html.ActionLink("Entrar", "Login")
    </div>
}