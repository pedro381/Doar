@model IEnumerable<Doar.Entity.Entities.Usuario>
@{
    ViewBag.Title = "Pesquisa de Usuário";
}

<h2>@ViewBag.Title</h2>

<div class="col-md-12 center panel">
    @using(Ajax.BeginForm("Buscar", "Usuario", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divGrid" })) {
        <div class="row">
            <div id="imaginary_container" class="imaginary_container"> 
                <div class="input-group stylish-input-group">
                    <input name="nome" type="text" class="form-control"  placeholder="Buscar" >
                    <span class="input-group-addon">
                        <button type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>  
                    </span>
                </div>
            </div>
        </div>
    }
    <div id="divGrid">@Html.Partial("Grid")</div>
</div>