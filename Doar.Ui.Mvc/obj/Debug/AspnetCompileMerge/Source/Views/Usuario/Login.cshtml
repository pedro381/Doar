@model Doar.Entity.Entities.Usuario
@{
    ViewBag.Title = "Entrar";
}

<h2>@ViewBag.Title</h2>
@using (Ajax.BeginForm("Login", "Usuario", new AjaxOptions { HttpMethod = "POST", OnSuccess = "Validar(data);" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-3 center panel">
        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Senha)
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Entrar" />
        </div>
        @Html.ActionLink("Lembrar senha?", "ForgotPassword")
    </div>
}